{% extends "layout.njk" %}

{% block content %}
<div class="container">
<table class="table table-striped">
  <thead class="bg-dark text-white">
    <tr>
      <th scope="col">Categories</th>
    </tr>
  </thead>
  <tbody>

  {% for categoryName in categories %}
  <tr>
    <td><a href="/category/{{categoryName.id}}">{{categoryName.label}}</a></td>
  </tr>
  {% endfor %}

  </tbody>
</table>
</div>
{% endblock %}
