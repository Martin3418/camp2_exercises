{% extends "layout.njk" %}

{% block content %}
<div class="container">
<div class="row">
    <div class="card col">
      <img class="card-img-top" src="https://www.decathlon.fr/media/{{card.image_path}}">
    </div>
    <div class="card col">
      <div class="card-body">
        <h4 class="card-text">{{card.title}}</h4>
        <h5>{{card.min_price}}€</h5>
        <h6>{{card.rating}}</h6>

        <p>Cet article sert à {{card.description}}</p>
      </div>
    </div>
</div>
</div>
{% endblock %}
